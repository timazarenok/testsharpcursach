<Window x:Class="TestCursach.AddProfessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCursach"
        mc:Ignorable="d"
        Title="AddProfessionWindow" Height="450" Width="800">
    <Grid>
        <Label FontWeight="Bold" Margin="0,0,0,150" Height="30" Width="200">Добавление профессии</Label>
        <TextBox x:Name="Name" Width="200" Height="25" />
        <Button x:Name="Add" Width="120" Height="30" Margin="0,150,0,0" Click="Add_Click">Добавить</Button>
        <Button x:Name="Exit" Width="120" Height="30" Margin="0,300,500,0" Click="Exit_Click">Выход</Button>
    </Grid>
</Window>
