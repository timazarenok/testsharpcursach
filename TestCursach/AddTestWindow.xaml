<Window x:Class="TestCursach.AddTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCursach"
        mc:Ignorable="d"
        Title="AddTestWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Width="300" FontSize="23" Height="30" Margin="0,0,0,350" FontWeight="Bold" Text="Добавление теста"/>
        <TextBlock Width="100" Height="20" Margin="0,0,70,70" FontSize="16">Название</TextBlock>
        <TextBox x:Name="Name" Width="200" Height="30"/>
        <TextBlock Width="130" Height="20" Margin="400,0,0,70" FontSize="16">Кол-во вопросов</TextBlock>
        <TextBox x:Name="Amount" Width="50" Height="30" Margin="400,0,0,0" PreviewTextInput="Amount_PreviewTextInput"/>
        <TextBlock Width="100" Height="20" Margin="0,0,570,70" FontSize="16">Профессия</TextBlock>
        <ComboBox x:Name="Professions" Width="200" Height="30" Margin="0,0,500,0" />
        <Button x:Name="Next" Width="120" Height="25" Margin="0,150,0,0" Click="Next_Click">Дальше</Button>
        <Button x:Name="Exit" Width="120" Height="30" Margin="0,300,500,0" Click="Exit_Click">Выход</Button>
    </Grid>
</Window>
