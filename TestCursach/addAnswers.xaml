<Window x:Class="TestCursach.addAnswers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCursach"
        mc:Ignorable="d"
        Title="addAnswers" Height="250" Width="500">
    <Grid>
        <Label FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top">Ответы</Label>
        <TextBox x:Name="AnswerText" Width="300" Height="50" Margin="0,0,0,50" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" />
        <Button x:Name="Next" Width="120" Height="30" Content="Далее" Margin="0,70,0,0" Click="Next_Click"/>
    </Grid>
</Window>
