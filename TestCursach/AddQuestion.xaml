<Window x:Class="TestCursach.AddQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCursach"
        mc:Ignorable="d"
        Title="AddQuestion" Height="450" Width="800">
    <Grid>
        <Label Width="200" Height="50" Margin="0,0,0,350" FontWeight="Bold" FontSize="20">Создание вопроса</Label>
        <TextBox x:Name="Name" Width="500" Height="150" Margin="0,50,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
        <Label Margin="0,0,0,150" FontSize="18" Width="120" Height="30">Вопрос</Label>
        <Button x:Name="Next" Content="Дальше" Width="120" Height="25" Margin="0,300,0,0" Click="Next_Click"/>
    </Grid>
</Window>
