<Window x:Class="TestCursach.AddQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCursach"
        mc:Ignorable="d"
        Title="AddQuestion" Height="450" Width="800">
    <Grid>
        <Label Width="200" Height="50" Margin="0,0,0,350" FontWeight="Bold" FontSize="20">Создание вопроса</Label>
        <TextBox x:Name="Name" Width="500" Height="75" Margin="0,0,0,170" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
        <Label Margin="0,0,0,300" FontSize="18" Width="120" Height="30">Вопрос</Label>
        <Label Margin="0,20,0,00" FontSize="18" Width="120" Height="30">Ответ</Label>
        <TextBox x:Name="Answer" Width="500" Height="75" Margin="0,150,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
        <Label Margin="0,0,200,40" FontSize="18" Width="140" Height="30">Счет за вопрос</Label>
        <TextBox x:Name="Score" Width="100" Height="25" Margin="60,0,0,30" PreviewTextInput="Score_PreviewTextInput" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
        <Button x:Name="Next" Content="Добавить" Width="120" Height="25" Margin="0,300,0,0" Click="Next_Click"/>
    </Grid>
</Window>
