<Window x:Class="TestCursach.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCursach"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Question" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkRed" FontSize="20" FontWeight="Bold" Width="700" Height="100" Margin="0,0,0,200"/>
        <Button x:Name="Yes" Width="150" Height="50" FontSize="20" Margin="0,50,250,0" Click="Yes_Click">Да</Button>
        <Button x:Name="No" Width="150" Height="50" FontSize="20" Margin="250,50,0,0" Click="No_Click">Нет</Button>
        <Button x:Name="Exit" Width="120" Height="30" Margin="0,300,500,0" Click="Exit_Click">Выход</Button>
    </Grid>
</Window>
